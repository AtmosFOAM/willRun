FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      P;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    ground
    {
        type            hydrostatic;
        value           uniform 0;
        gradient        uniform 0;
        gradPcoeffName  gradPcoeff;
        buoyancyName    bf;
    }
    top
    {
        type            hydrostatic;
        value           uniform 0;
        gradient        uniform 0;
        gradPcoeffName  gradPcoeff;
        buoyancyName    bf;
    }
    left
    {
        type            zeroGradient;
    }
    right
    {
        type            zeroGradient;
    }
}


