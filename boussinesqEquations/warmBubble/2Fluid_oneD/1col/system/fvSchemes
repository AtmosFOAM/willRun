FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}
offCentre 1;

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default none;
    sigma Gauss vanLeer;
    b Gauss vanLeer;
    u Gauss vanLeer;
}

laplacianSchemes
{
    default         Gauss linear uncorrected;
}

interpolationSchemes
{
    default        none;
    b              linear;
    sigma          linear;
    transfer       linear;
    massTransfer   linear;
    convection     linear;
    interpolate(laplacian(u.sum)) linear;
    interpolate(laplacian(u.stable)) linear;
    interpolate(laplacian(u.buoyant)) linear;
}

snGradSchemes
{
    default         uncorrected;
}

fluxRequired
{
    default         no;
}


