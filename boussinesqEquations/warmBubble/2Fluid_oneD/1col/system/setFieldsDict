FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue sigma.stable 0.5 //0.45
    volScalarFieldValue sigma.buoyant 0.5
    volScalarFieldValue b.stable 0
    volScalarFieldValue b.buoyant 0
    volVectorFieldValue u.stable (0 0 -5)
    volVectorFieldValue u.buoyant (0 0 5)
);

regions
(
    // Set cell values
    sphereToCell
    {
        centre (0 500 2e3);
        radius 2e3;
        
        fieldValues
        (
            //volScalarFieldValue sigma.stable 0.5
            //volScalarFieldValue sigma.buoyant 0.5
        );
    }

    boxToCell
    {
        box (-1e4 0 2.5e3) (1e4 1e3 7.5e3);

        fieldValues
        (
            volScalarFieldValue sigma.stable 0.5
            volScalarFieldValue sigma.buoyant 0.5
        );
    }
);

// ************************************************************************* //
